extends ./layouts/layout.pug


block content
	.container
		.row
			.col-sm-12
				h2 This feed is 100% squirrelized using magical powers of #[a(href="https://clarifai.com") #[img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/83/Clarifai_Logo.png/220px-Clarifai_Logo.png" width="100" height="30")]]
				h3 Check out the #[a(href="https://github.com/abdulhannanali/clarifai-squirrelfeed") github repo] to contribute and learn more about this project
		.row
			.col-sm-12
				a.btn.btn-success(href="/submit")
					h3 Submit a squirrel
		.row
			.col-sm-12
				h3 Squirrels are here once and for all to dominate the planet earth and make humans go nuts
				each image in images
					.panel.panel-default
						.panel-body
							.row
								.col-sm-12.col-md-6
									img.img-responsive(src=image.link alt="squirrel image")
									br
									a.btn.btn-primary.btn-lg(href="/image/" + image.id) More info and discussion...
								.col-sm-12.col-md-6
									h3(data-classes=image.classes) Classes: #{image.classes.join(", ")}
									h4 recruited #[span.date-created #{moment(image.createdAt).fromNow()}]
									h4 clarifai document id #[span.text-primary #{image.docid}]


